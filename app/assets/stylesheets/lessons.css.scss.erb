/*
*= require comments
*/

.lesson-container, .info-container {
  padding-left: 10px;
  padding-right: 10px;
}

#content, #description, #links {
  white-space: pre-wrap;       /* css-3 */
  white-space: -moz-pre-wrap;  /* Mozilla, since 1999 */
  white-space: -pre-wrap;      /* Opera 4-6 */
  white-space: -o-pre-wrap;    /* Opera 7 */
  word-wrap: break-word;       /* Internet Explorer 5.5+ */
}

.avatar-title {
  height: 4em;
  width: 4em;
  border-radius: 2em;
  margin: 0 auto;
  margin-bottom: 1em;

  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

h1, h2, h3 {
  text-align: center
}

#title {
  text-align: center;
  font-size: 3em;
}

#description {
  margin-bottom: 1em;
}

#links, #resources {
  text-align: left;
}

.lesson {
  margin-top: 2em;
  text-align: justify;
}

.lesson-links {
  margin-top: 1.5em;
}

.lesson-links .gray-button, .lesson-links .red-button {
  // font-size: 100%;
  // display: inline-block;
  width: 150px;
  // margin: 0 auto;
  margin-right: 0.5em;
}

.next-lesson {
  text-align: right;
}

.attachments {
  margin: 0 auto;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.doc {
  padding: 1em;
  margin-top: 1em;
  margin-bottom: 1em;
  color: black;
  border-bottom: 2px solid #8cff00;
  font-size: 150%;
}

.doc:hover, .doc:active {
  color: black;
  text-decoration: none;
}


//--------------------------------------------------------------
// Media

// Small
@media only screen and (min-width: 576px) {
  .lesson-container, .info-container {
    padding-left: 20px;
    padding-right: 20px;
  }
}

// Medium
@media only screen and (min-width: 768px) {
  .lesson-container, .info-container {
    padding-left: 40px;
    padding-right: 40px;
  }
}

//--------------------------------------------------------------------
// Index

ul.categories {
  list-style-type: none;
  padding: 0;
  font-size: 160%;
  color: black;
}

ul.categories a {
  color: black;
  text-decoration: none;
}

.category-li {
  border-bottom: 1px solid #8cff00;
  width: 100%;
  padding-top: 1em;
  padding-bottom: 0em;
}

a.category-title {
  display: block;
  width: 100%;
  height: 100%;
  border-bottom: 1px solid #8cff00;
}

ul.category-lessons {
  margin-top: 1em;
  list-style-type: none;
  padding: 0;
  font-size: 80%;
  display: none;
}

li.category-lesson {
  display: block;
  width: 100%;
  height: 100%;
}

a.lesson-link {
  display: block;
  width: 100%;
  height: 100%;
}

.create-lesson-link {
  margin-top: 1em;
  width: 100%
}

