@import "bootstrap-sprockets";
@import "bootstrap";

@import url('https://fonts.googleapis.com/css?family=Roboto');
@import url('https://fonts.googleapis.com/css?family=Rochester');

/*------------------------------ Common --------------------------------*/
html {
  height: 100%;
}

body {
 background: url(<%= asset_path 'wp_website.jpg' %>) no-repeat center center fixed;
 -webkit-background-size: cover;
 -moz-background-size: cover;
 -o-background-size: cover;
 background-size: cover;

 font-family: 'Roboto', sans-serif;

 font-size: 1.7em;
 padding-top: 50px; /* For fixed navbar */
 position: relative;
 padding-bottom: 6em; /* needed for footer to not to conflict with content. */
 min-height: 100%;
}

/*------------------------------ Navigation --------------------------------*/

nav {
 opacity: 0.92;
}

.nav.navbar-nav li a {
 color: #DADADA;
}

.nav.navbar-nav .dropdown-menu li a {
 color: black;
}

.navbar-header a.navbar-brand {
 color: #ccff00;
}

.navbar-header a.navbar-brand:hover {
 color: #8cff00;
}

/*------------------------------ Main --------------------------------*/

.container {
 margin-top: 1em;
 padding-top: 1em;
 background-color: rgba(255, 255, 255, 0.9);
 padding-bottom: 2em;
}

.flash-container {
 margin-top: 15px;
 opacity: 0.9;
}

.field_with_errors {
 color: red;
}

legend {
 border-bottom: 1px solid black;
}

.alert, .list-group p {
 text-align: center;
}

h1, h2 {
 text-align: center
}

.my-container {
 width: 50%;
 margin: 0 auto;
 text-align: center;
}

img#avatar {
 width: 40%;
}

div.home {
 position: absolute;
 top: 30%;
 color: white;
 font-size: 2.3em;
 text-align: center;
}

.home p {
 font-family: "Rochester", cursive;
 font-size: 1.2em;
}

.home h1 {
 color: #ccff00;
 font-size: 1.6em;
}

.about {
 text-align: left;
 padding: 0 40px;
}

/*------------------------------ Links --------------------------------*/

a {
 transition: color .4s;
 color: #265C83;
 text-decoration: none;
}

a.my-link:link, a.my_link:visited {
 color: #265C83;
}

a.my-link:hover {
 color: #63A1B9;
 text-decoration: none;
}

a.my-link:active  {
 transition: color .3s;
 color: #79C5E3;
}

/*------------------------------ Lists --------------------------------*/

.list-group-item-purple {
 background-color: rgba(128,0,128,0.2);
}

a.list-group-item-purple:hover {
 background-color: rgba(128,0,128,0.35);
}

.studyships {
 width: 70%;
 display: inline-block;
}

.button_to {
 display: inline-block;
}

/*------------------------------ Footer --------------------------------*/

footer {
 position: absolute;
 right: 0;
 bottom: 0;
 left: 0;
 padding: 1em;
 background-color: #111013;
 text-align: right;
 opacity: 0.92;
 color: rgb(139, 123, 118);
}
