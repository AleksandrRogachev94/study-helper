@import "bootstrap-sprockets";
@import "bootstrap";

@import url('https://fonts.googleapis.com/css?family=Roboto');
@import url('https://fonts.googleapis.com/css?family=Rochester');

/*------------------------------ Common --------------------------------*/
html {
  height: 100%;
}

body {
 background: url(<%= asset_path 'wp_website.jpg' %>) no-repeat center center fixed;
 -webkit-background-size: cover;
 -moz-background-size: cover;
 -o-background-size: cover;
 background-size: cover;

 font-family: 'Roboto', sans-serif;

 font-size: 1.1em;
 padding-top: 50px; /* For fixed navbar */
 position: relative;
 padding-bottom: 6em; /* needed for footer to not to conflict with content. */
 min-height: 100%;
}

/*------------------------------ Navigation --------------------------------*/

nav {
 opacity: 0.92;
}

.nav.navbar-nav li a {
 color: #DADADA;
}

.nav.navbar-nav .dropdown-menu li a {
 color: black;
}

.navbar-header a.navbar-brand {
 color: #ccff00;
}

.navbar-header a.navbar-brand:hover {
 color: #8cff00;
}

/*------------------------------ Main --------------------------------*/

.container {
 margin-top: 1em;
 padding-top: 1em;
 background-color: rgba(255, 255, 255, 0.9);
 padding-bottom: 2em;
}

.flash-container {
 margin-top: 15px;
 opacity: 0.9;
}

.field_with_errors {
 color: red;
}

legend {
 border-bottom: 1px solid black;
}

.alert, .list-group p {
 text-align: center;
}

h1, h2 {
 text-align: center
}

.my-container {
 width: 100%;
 margin: 0 auto;
 text-align: center;
}

/*------------------------------ Links --------------------------------*/

a {
 transition: color .4s;
 color: #265C83;
 text-decoration: none;
}

a.my-link:link, a.my_link:visited {
 color: #265C83;
}

a.my-link:hover {
 color: #63A1B9;
 text-decoration: none;
}

a.my-link:active  {
 transition: color .3s;
 color: #79C5E3;
}

/*------------------------------ Lists --------------------------------*/

.list-group-item-purple {
 background-color: rgba(128,0,128,0.2);
}

a.list-group-item-purple:hover {
 background-color: rgba(128,0,128,0.35);
}

.studyships {
 width: 70%;
 display: inline-block;
}

.button_to {
 display: inline-block;
}

/*------------------------------ Footer --------------------------------*/

footer {
 position: absolute;
 right: 0;
 bottom: 0;
 left: 0;
 padding: 1em;
 background-color: #111013;
 text-align: right;
 opacity: 0.92;
 color: rgb(139, 123, 118);
}

//------------------------------------------------------
// My Gray and Red Buttons

 .gray-button, .gray-button:link {
  text-align: center;
  display: inline-block;
  padding: 0.5em;
  border: none;
  border-radius: 5px;
  background-color: #181818;
  opacity: 0.8;
  color: white;
  text-decoration: none;
  transition: opacity 0.5s;
}

.gray-button:hover, .gray-button:visited {
  color: white;
  opacity: 1;
  text-decoration: none;
}

.red-button, .red-button:link {
  text-align: center;
  display: inline-block;
  padding: 0.5em;
  border: none;
  border-radius: 5px;
  background-color: #d81c00;
  opacity: 0.8;
  color: white;
  text-decoration: none;
  transition: opacity 0.5s;
}

.red-button:hover, .red-button:visited {
  color: white;
  opacity: 1;
  text-decoration: none;
}

/*------------------------------ Loader --------------------------------*/

.loader {
  margin: 0 auto;
  border: 8px solid #E0E0E0; /* Light grey */
  border-top: 8px solid #ccff00; /* Blue */
  border-radius: 50%;
  width: 60px;
  height: 60px;
  animation: spin 1.5s linear infinite;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/*------------------------------ Media --------------------------------*/

// Small
@media only screen and (min-width: 576px) {
  body { font-size: 1.4em; }
}

// Medium
@media only screen and (min-width: 768px) {
  body { font-size: 1.7em; }
  .my-container { width: 50%; }
}

.btn-search {
  padding: 0.3em;
}

// Override bs styles.

.form-control:focus {
  box-shadow: 0 0 10px #505050;
  border: none;
}
