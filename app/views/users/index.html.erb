<h1>All Users</h1>

<ul>
  <% @users.each do |user| %>
    <% next if current_user == user %>
    <li>
      <%= link_to user.email, user_path(user) %>
      <%= " - your student" if current_user.students.include?(user) %>
      <%= " - your teacher" if current_user.teachers.include?(user) %>
    </li>
  <% end %>
</ul>
