<div class="row">
  <div class="col-sm-12">
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "Study Home", root_path, class: "navbar-brand" %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <!-- Main Nav -->
          <ul class="nav navbar-nav">
            <%= link_to "About", about_path, class: "navbar-brand" %>
            <% if signed_in? %>
              <li><%= link_to (current_user.try(:full_name) || current_user.email), user_path(current_user) %></li>
              <li><%= link_to "My Teachers", user_studyships_path(current_user, "teachers") %></li>
              <li><%= link_to "My Students", user_studyships_path(current_user, "students") %></li>
              <li><%= link_to "All Users", users_path %></li>
              <li><%= link_to "Categories", categories_path %></li>
            <% end %>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <% if signed_in? %>
              <li><%= link_to "Log out", destroy_user_session_path, method: 'delete' %></li>
            <% else %>
              <li><%= link_to "Sign in", new_user_session_path %></li>
              <li><%= link_to "Sign up", new_user_registration_path %></li>
            <% end %>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
  </div>
</div>
