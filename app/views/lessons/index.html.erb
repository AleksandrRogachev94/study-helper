<h1><%= list_index_title(@user) %></h1>

<ul>
  <% @lessons_by_categories.each do |category, lessons| %>
    <li>
      <%= category.title %>
      <ul>
        <% lessons.each do |lesson| %>
          <li><%= link_to lesson.title, user_lesson_path(current_user, lesson) %></li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>
