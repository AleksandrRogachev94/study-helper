<h1><%= list_index_title(@user) %></h1>

<ul>
  <% @lessons_by_categories.each do |category, lessons| %>
    <li>
      <%= category.title %>
      <ol>
        <% lessons.each do |lesson| %>
          <li><%= link_to lesson.title, user_lesson_path(@user, lesson) %></li>
        <% end %>
      </ol>
    </li>
  <% end %>
</ul>

<%= link_to "Create new Lesson", new_user_lesson_path %>
