<fieldset>
  <legend>Choose category from the list or create new one<br>(reload the page if select field doesn't appear)</legend>

  <div class="form-group">
    <%= f.collection_select :category_id, Category.all, :id, :title, {}, class: "form-control" %>
  </div>

  <%= f.fields_for :category, category do |category_form| %>
    <div class="form-group">
      <%= category_form.label :title, "Title (live blank if you don't want to create it)" %>
      <%= category_form.text_field :title, value: "", class: "form-control" %>
    </div>
  <% end %>
</fieldset>
<br>
