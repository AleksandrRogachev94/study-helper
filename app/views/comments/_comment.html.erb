<li class="comment">
  <p><%= comment.author.appearance  %> - <%= comment.content %></p>
  <div class="links">
    <% if policy(comment).update? %>
      <!-- TODO -->
      <%= link_to "Update", comment_path(comment), method: 'PATCH', class: "btn btn-primary" %>
    <% end %>

    <% if policy(comment).destroy? %>
      <%= link_to "Delete", comment_path(comment), method: 'DELETE', data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    <% end %>
  </div>
</li>
